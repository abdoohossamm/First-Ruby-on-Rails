<h1 class="text-2xl font-bold mb-4">New Post</h1>

<%= turbo_frame_tag 'new_post_form' do %>
  <%= form_with(model: @post, data: { turbo: true }, id: "new_post", class: "space-y-4") do |form| %>
    <div class="flex flex-col">
      <%= form.label :title, class: "font-semibold" %>
      <%= form.text_field :title, class: "border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :content, class: "font-semibold" %>
      <%= form.text_area :content, class: "border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="flex justify-end">
      <%= form.submit "Create Post", class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
    </div>
  <% end %>
<% end %>